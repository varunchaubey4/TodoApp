<body>
    <div id="outer-div">
        <h1 id="heading">TODO App</h1>
        
        <form action="" method="post">
            
            <div id="description">
                <h4 class="sub-heading">DESCRIPTION</h4>
                <input type="text" placeholder="What do you need to do?" required>
            </div>
    
            <div id="category-div">
                <h4 class="sub-heading">CATEGORY</h4>
            </div>
    
            <div id="date-div">
    
            </div>
    
            <button>ADD TASK</button>
            <button>DELETE TASK</button>

        </form>

        <div id="task-list">

        </div>
    </div>
</body>
</html>